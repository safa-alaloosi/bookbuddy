<div class="section">
    <form action="/add-book" method="POST" id="addBookForm">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required minlength="1" maxlength="255">
        </div>
        <div>
            <label for="author">Author:</label>
            <input type="text" id="author" name="author" required minlength="1" maxlength="255">
        </div>
        <button type="submit">Add Book</button>
    </form>
</div>